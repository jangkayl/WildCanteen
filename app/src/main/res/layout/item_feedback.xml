<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="15dp"
    android:background="@drawable/feedback_bg_positive">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Profile image"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_avatar"
            android:src="@drawable/kyle_dev"/>

        <TextView
            android:id="@+id/userName"
            android:text="Kyle Guro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <RatingBar
            android:id="@+id/userRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"
            android:rating="3.5"
            android:theme="@style/RatingBar" />
    </LinearLayout>

    <TextView
        android:id="@+id/feedbackDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="4dp"
        android:textColor="#E0E0E0"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/feedbackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="hello"
        android:textSize="13sp"
        android:paddingHorizontal="21dp"
        android:layout_marginVertical="10dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconLike"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/like"
            android:layout_marginEnd="8dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="1"
            android:textSize="12sp"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/iconDislike"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/dislike"
            android:layout_marginEnd="8dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/dislikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>