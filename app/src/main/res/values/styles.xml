<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CanteenEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#5D4037</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#BDBDBD</item>
        <item name="colorControlActivated">#FFD700</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/selectedColor</item>
    </style>
</resources>