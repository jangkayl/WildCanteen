<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/rounded_drawable"
    android:backgroundTint="#1E1E1E"
    android:elevation="10dp">

    <!-- Top Row: Image + Food Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/foodImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_drawable"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/chicken" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/foodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱0.00"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#F79901"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/foodStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Queue"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@color/gray"
                android:paddingTop="2dp" />
        </LinearLayout>

        <!-- Quantity + Total -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: 1"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: ₱0.00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#F79901"
                android:paddingTop="4dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_marginVertical="10dp" />

    <!-- Student Info + Payment + Delivery + Change Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Dela Cruz"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17-2068-369"
                android:textSize="12sp"
                android:textColor="#BBBBBB" />
        </LinearLayout>

        <!-- Payment + Delivery Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment: "
                android:textSize="13sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery: "
                android:textSize="13sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Payment + Delivery Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/paymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GCash"
                android:textSize="13sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/deliveryMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On-Site"
                android:textSize="13sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Change Status Button -->
        <Button
            android:id="@+id/btnChangeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Status"
            android:textSize="13sp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#F79901"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="12dp" />
    </LinearLayout>
</LinearLayout>
