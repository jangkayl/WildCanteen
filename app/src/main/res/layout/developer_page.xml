<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/back_arrow"
            android:layout_margin="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="About the Developers"
            android:textColor="@color/white">

        </TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/fateful_verdida"
            android:layout_marginEnd="0dp"
            android:layout_margin="25dp"/>
        <LinearLayout

            android:paddingTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fateful Verdida"
                android:textColor="@color/white"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:paddingRight="15dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Hi, I am Fateful. I'm a student at CIT."
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/john_kyle_villarazo"
            android:layout_marginEnd="0dp"
            android:layout_margin="25dp"/>
        <LinearLayout

            android:paddingTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Kyle A. Villarazo"
                android:textColor="@color/white"/>
            <TextView
                android:layout_marginTop="5dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin lacus arcu, posuere mattis dolor ut, convallis euismod sem. Vestibulum tincidunt consectetur risus."
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>